generator client {
  provider = "prisma-client" // "prisma-client"
  output = "../src/generated/db"
  previewFeatures = ["relationJoins", "views"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  hasNotes Boolean  @default(false) @map("has_notes")

  transactions Transaction[]
  @@map("categories")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Decimal
  type        TransactionType @default(expense)
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int @map("category_id")
  date        Int
  note        String @default("")

  @@index([type])
  @@index([date])
  @@map("transactions")
}

enum TransactionType {
  expense
  income
}

view ReviewYears {
  year     Int @id
  income   Decimal
  expense  Decimal
  total    Decimal

  @@map("review_years")
}

view ReviewMonths {
  year     Int
  month    Int
  income   Decimal
  expense  Decimal
  total    Decimal

  @@map("review_months")
  @@id([year, month])
}

view ReviewCategoryMonths {
  year     Int
  month    Int
  categoryName String @map("category_name")
  income   Decimal
  expense  Decimal
  total    Decimal

  @@map("review_category_months")
  @@id([year, month, categoryName])
}